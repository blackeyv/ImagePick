<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
   	android:background="@color/bg_title"
   	android:visibility="visible" >
    
    <CheckBox 
        android:id="@+id/image_select_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:button="@drawable/image_pick_checkbox"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_image_select"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_toLeftOf="@+id/image_select_checkbox"
        android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/image_select_snackbar_click" 
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"
        
        />

</RelativeLayout>
